<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/result_cv"
    style="@style/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:contentDescription="@string/moviePoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_poster_image_view"/>

        <ImageButton
            android:contentDescription="@string/addToWatchedlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/watched_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_watchedlist"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_counter_tv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/watched_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_title_tv"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/movie_poster_image_view"
            android:layout_toEndOf="@+id/movie_poster_image_view"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@+id/watched_button"
            android:layout_toLeftOf="@+id/watched_button"/>




    </RelativeLayout>
</android.support.v7.widget.CardView>